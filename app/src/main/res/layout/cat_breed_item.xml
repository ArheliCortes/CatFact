<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/teal_250"
        android:layout_margin="@dimen/cat_margin_16">
        <ImageView
            android:id="@+id/catBreedImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/cat_breed_title"
            android:src="@drawable/ic_cat_silhouette" />
        <TextView
            android:id="@+id/catBreedNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cat_margin_5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black_200"
            android:textSize="@dimen/cat_size_20"
            tools:text="@string/cat_breed_text_example"/>
    </com.google.android.material.card.MaterialCardView>
</layout>