<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/pink_200"
        android:layout_margin="@dimen/cat_margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_cat_footprint" />
            <TextView
                android:id="@+id/catFactTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cat_margin_5"
                android:layout_gravity="center"
                android:textColor="@color/black_200"
                android:textSize="@dimen/cat_fact_text_size"
                tools:text="@string/cat_fact_text_example"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>